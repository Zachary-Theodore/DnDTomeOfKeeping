
@{


	ViewBag.Title = "ViewCharacter";

	string[] classNames = new string[] { "Barbarian", "Bard", "Cleric", "Druid", "Fighter", "Monk", "Paladin", "Ranger", "Rogue", "Sorcerer", "Warlock", "Wizard" };
	string[] raceNames = new string[] { "Dwarf", "Elf", "Halfling", "Human", "Dragonborn", "Gnome", "Half-Elf", "Half-Orc", "Tiefling" };
}

<h2>ViewCharacter</h2>
@if (ViewBag.Character.Campaign != null)
    {
    <a href = "/Home/Campaign?id=@ViewBag.Character.Campaign" > View @ViewBag.Character.CharName's Campaign</a>
    }
    else
    {
    <a href="/Home/Campaign"></a>
    }

<h2>@ViewBag.Character.CharName</h2>

<label>Character Name: </label> @ViewBag.Character.CharName  <br />
<label>Race: </label> @raceNames[@ViewBag.Character.Race - 1]  <br />
<label>Class: </label> @classNames[@ViewBag.Character.Class - 1]  <br />
<label>Current Level: </label> @ViewBag.Character.CharLevel<br />
<label>Current HP: </label> @ViewBag.Character.HitPoints<br />
<label>Current Alignment: </label> @ViewBag.Character.Alignment<br />
<label>Current STR: </label> @ViewBag.Character.Strength<br />
<label>Current DEX: </label> @ViewBag.Character.Dexterity<br />
<label>Current CON: </label> @ViewBag.Character.Constitution<br />
<label>Current INT: </label> @ViewBag.Character.Intelligence<br />
<label>Current WIS: </label> @ViewBag.Character.Wisdom<br />
<label>Current CHA: </label> @ViewBag.Character.Charisma<br />
@if (ViewBag.Character.SpellSlot1 != null || ViewBag.Character.SpellSlot2 != null || ViewBag.Character.SpellSlot3 != null || ViewBag.Character.SpellSlot4 != null
	|| ViewBag.Character.SpellSlot5 != null || ViewBag.Character.SpellSlot6 != null || ViewBag.Character.SpellSlot7 != null || ViewBag.Character.SpellSlot8 != null
	|| ViewBag.Character.SpellSlot9 != null)
{
	<label>Spell Slots:</label><br />
	<p>1: @ViewBag.Character.SpellSlot1</p>
	<p>2: @ViewBag.Character.SpellSlot2</p>
	<p>3: @ViewBag.Character.SpellSlot3</p>
	<p>4: @ViewBag.Character.SpellSlot4</p>
	<p>5: @ViewBag.Character.SpellSlot5</p>
	<p>6: @ViewBag.Character.SpellSlot6</p>
	<p>7: @ViewBag.Character.SpellSlot7</p>
	<p>8: @ViewBag.Character.SpellSlot8</p>
	<p>9: @ViewBag.Character.SpellSlot9</p>
}
@if (ViewBag.Character.SpellsKnown != null)
{
	<label>Current Spells: </label>@ViewBag.Character.SpellsKnown<br />
}
<label>Current Proficiencies: </label>@ViewBag.Character.Proficiencies <br />
<label>Current Features: </label>@ViewBag.Character.Features<br />

<br /><br /><br />



