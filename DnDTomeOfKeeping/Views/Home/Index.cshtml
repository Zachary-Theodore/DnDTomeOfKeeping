@{
	ViewBag.Title = "Home Page";
}

<form action="/Home/CharacterCreator" method="get">
	<select name="Class">
		@for(int i = 0; i<12; i++)
        {
		<option value="@(i+1)">@ViewBag.Classes[i]["name"]</option>
        }
	</select>
	<button type="submit">Select</button>
</form>

<br /><br />

<a href="/Home/CharacterEdit">Edit Character</a>