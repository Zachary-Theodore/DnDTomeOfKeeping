
@{
    ViewBag.Title = "Tracker";
}

<h2>Tracker</h2>
<button type="button" a href="/Home/PickClass" class="btn btn-primary btn-lg btn-block" role="button" aria-pressed="true">Create a Character!</button>

<h3>My Characters</h3>





<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Character List</th>
            <th scope="col">Edit Character</th>
            <th scope="col">Delete Character</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var Char in ViewBag.CharacterToView)
        {
            <tr>
                <td class="col-md-4">
                    <a href="/Home/ViewCharacter?CharacterID=@Char.CharID">@Char.CharName     </a>
                </td>
                <td class="col-md-4">
                    <a href="/Home/CharacterEdit?CharacterID=@Char.CharID&Class=@Char.Class">Edit</a><br />
                </td>
                <td class="col-md-4">
                    <a href="/Home/DeleteCharacter?charID=@Char.CharID" onclick="return confirm(' Are you sure that you want to delete this?')">Delete</a><br />
                </td>

            </tr>
        }
    </tbody>
</table>

<br />
<br />
<br />
<h3>My Campaigns</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Cmapaign List</th>
            <th>Delete Campaign</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Camp in ViewBag.MyCampaigns)
        {
            <tr>
                <td class="col-md-4">
                    <a href="/Home/Campaign?id=@Camp.CampaignID">@Camp.CampaignName</a>
                </td>
                <td class="col-md-4">
                    <a href="/Home/DeleteCampaign?campaignID = @Camp.CampaignID" onclick="return confirm('Are you sure that you want to delete this?')">Delete</a><br />
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
